<% include partials/head %>
  <body>
    <div class="container">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/admin/home">Tweet Classifier</a>
          </div>
          <ul class="nav navbar-nav">
            <li class="active"><a href="/admin/home">Home</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><span><strong>admin id</strong> : <%= user._id ? user._id : '' %> </span></li>
            <li><a href="/admin/logout"> Sign out</a></li>
          </ul>
        </div>
      </nav>
      </br>
      <form action="/admin/training" method="post">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search" name="tag" required>
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
        </div>
      </form>
      </br>
      <form action="/admin/settraining" method="post">
      <div class="pre-scrollable" width="50">
        <table class="table">
          <thead>
            <tr>
              <th>Data</th>
              <th>Label</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tr>
              <% data.forEach( function( data ){ %>
                <tbody>
                  <td>
                    <%= data.text %>
                  </td>
                  <td><select class="form-control" name="label">
                      <option>Positif</option>
                      <option>Negatif</option>
                    </select></td>
                  <td>
                    <!-- <a href='getviewmaps/<%= data.id %>'><button class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button></a> -->
                    <a href='/admin/delete/<%= data.id %>'><button class="btn btn-default" onclick="deleteItem()">Delete</button></a>
                  </td>
          </tr>
          </tbody>
          <% }); %>
        </table>
      </div>
      <button type="submit" class="btn btn-success">Success</button>
      </form>
      <div id="chart_div"></div>
      <%- include('../layout/footer') %>
    </div>
  </body>

  </html>